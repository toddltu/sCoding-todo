{% extends 'base.html.twig' %}

{% block title %}Todo{% endblock %}

{% block body %}
    <h1>Todo</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ todo.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ todo.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ todo.content }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ todo.createdAt ? todo.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ todo.inStatus }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('todo_index') }}">back to list</a>

    <a href="{{ path('todo_update', {'id': todo.id}) }}">edit</a>

    {{ include('api/_delete_form.html.twig') }}
{% endblock %}